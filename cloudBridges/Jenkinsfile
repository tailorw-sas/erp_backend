pipeline {
    
    agent any

	environment {
		GIT_PACKAGE_TOKEN = credentials("GithubPackageToken")
		ORIGIN_BRANCH_NAME = "${env.GIT_BRANCH}"
	}
	
	triggers {
        githubPush()
    }
    
    stages {
        stage ('Init') {
            steps {
                echo 'Initializing......'
		    script {
			def branch = env.ORIGIN_BRANCH_NAME.replace('origin/', '')
			env.BRANCH_NAME = branch
		    }
            }
        }

	stage ('Create docker image'){
		steps {
			dir('cloudBridges'){
				
				sh 'docker build -t tailorw/fin-cloud-bridges:dev --build-arg PACKAGE_TOKEN=$GIT_PACKAGE_TOKEN --build=arg POM_NAME=pom-$BRANCH_NAME.xml.'
				withDockerRegistry(credentialsId: 'Tailorw-DockerCredentials', url: "") {
                			sh 'docker push tailorw/fin-cloud-bridges:dev'
                		}
			}
		}
	}

	stage ('Publish to Kubernetes') {
            steps {
                withKubeConfig(caCertificate: '', clusterName: '', contextName: '', credentialsId: 'KubernetesCredential', namespace: 'finamer', restrictKubeConfigAccess: false, serverUrl: 'https://172.20.41.150:5443') {
                    sh 'kubectl apply -f kubernetes-config/deployments/cloudbridges.yaml'
                }
            }
        }
    }
}
