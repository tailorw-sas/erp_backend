pipeline {
    
    agent any
    
	triggers {
        githubPush()
    }
    
    stages {
        stage ('Init') {
            steps {
                echo 'Initializing...'
            }
        }

	stage ('Create docker image'){
		steps {
			dir('gateway'){
				sh 'docker build -t tailorw/fin-gateway:v1 .'
				withDockerRegistry(credentialsId: 'Tailorw-DockerCredentials', url: "") {
                			sh 'docker push tailorw/fin-gateway:v1'
                		}
			}
		}
	}
    }
}
